<!DOCTYPE html>
<!--[if IE]><![endif]-->
<!--[if IE 8 ]><html dir="{{ direction }}" lang="{{ lang }}" class="ie8"><![endif]-->
<!--[if IE 9 ]><html dir="{{ direction }}" lang="{{ lang }}" class="ie9"><![endif]-->
<!--[if (gt IE 9)|!(IE)]><!-->
	<html
	dir="{{ direction }}" lang="{{ lang }}"> <!--<![endif]-->
	<head>
		<meta charset="UTF-8"/>
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<title>{{ title }}</title>
		<base href="{{ base }}"/>
		{% if description %}
			<meta name="description" content="{{ description }}"/>
		{% endif %}
		{% if keywords %}
			<meta name="keywords" content="{{ keywords }}"/>
		{% endif %}
		<script src="catalog/view/javascript/jquery/jquery-2.1.1.min.js" type="text/javascript"></script>
		<link href="catalog/view/theme/naykel/stylesheet/bootstrap.css" rel="stylesheet" media="screen"/>
		<script src="catalog/view/theme/naykel/bootstrap/javascripts/bootstrap.min.js" type="text/javascript"></script>
		<link href="catalog/view/javascript/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css"/>
		<link href="//fonts.googleapis.com/css?family=Open+Sans:400,400i,300,700" rel="stylesheet" type="text/css"/>
		<link href="catalog/view/theme/naykel/stylesheet/jtb.css" rel="stylesheet">
		{% for style in styles %}
			<link href="{{ style.href }}" type="text/css" rel="{{ style.rel }}" media="{{ style.media }}"/>
		{% endfor %}
		{% for script in scripts %}
			<script src="{{ script }}" type="text/javascript"></script>
		{% endfor %}
		<script src="catalog/view/javascript/common.js" type="text/javascript"></script>
		{% for link in links %}
			<link href="{{ link.href }}" rel="{{ link.rel }}"/>
		{% endfor %}
		{% for analytic in analytics %}
			{{ analytic }}
		{% endfor %}
	</head>
	<body>

		<div id="top-links" class="nk-light">
			<div class="nk-container">
				<div class="nk-flex nk-gg-1 nk-ha-r nk-mxy-0 nk-py-05">
					<a href="{{ wishlist }}" id="wishlist-total" title="{{ text_wishlist }}">
						<i class="fa fa-heart"></i>
						<span class="hidden-xs hidden-sm hidden-md">{{ text_wishlist }}</span>
					</a>
					<a href="{{ shopping_cart }}" title="{{ text_shopping_cart }}">
						<i class="fa fa-shopping-cart"></i>
						<span class="hidden-xs hidden-sm hidden-md">{{ text_shopping_cart }}</span>
					</a>
					<a href="{{ checkout }}" title="{{ text_checkout }}">
						<i class="fa fa-share"></i>
						<span class="hidden-xs hidden-sm hidden-md">{{ text_checkout }}</span>
					</a>
				</div>
			</div>
		</div>

		<header id="nk-header" class="nk-py-2">

			<div class="nk-container nk-flex nk-gg-2">

				<div id="logo">
					{% if logo %}
						<a href="{{ home }}"><img src="{{ logo }}" title="{{ name }}" alt="{{ name }}"/></a>
					{% else %}
						<h1>
							<a href="{{ home }}">{{ name }}</a>
						</h1>
					{% endif %}
				</div>

				<div id="search" class="nk-fg1 nk-py-05 ">{{ search }}</div>

				<div class="flex nk-fg0">

					<div class="nk-flex nk-gg-1">

						<a class="nk-btn-icon" href="{{ contact }}">
							<svg class="nk-icon">
								<use xlink:href="catalog/view/theme/naykel/svg/naykel-ui-SVG-sprite.svg#phone-o"></use>
							</svg>
							<div>Contact</div>
						</a>

						{{ cart }}

						<div class="nk-dd">
							<a class="nk-btn-icon" href="{{ account }}" title="{{ text_account }}">
								<svg class="nk-icon">
									<use xlink:href="catalog/view/theme/naykel/svg/naykel-ui-SVG-sprite.svg#user-circle"></use>
								</svg>
								<div>{{ text_account }}</div>
							</a>
							<div class="nk-dd-content nk-pos-r">
								<nav class="flex-col">
									{% if logged %}
										<a class="nk-block" href="{{ account }}">{{ text_account }}</a>
										<a class="nk-block" href="{{ order }}">{{ text_order }}</a>
										<a class="nk-block" href="{{ logout }}">{{ text_logout }}</a>
									{% else %}
										<a class="nk-block" href="{{ register }}">{{ text_register }}</a>
										<a class="nk-block" href="{{ login }}">{{ text_login }}</a>
									{% endif %}
								</nav>
							</div>
						</div>

					</div>
				</div>

			</div>

		</header>
		{{ menu }}
	</body>
</html>
